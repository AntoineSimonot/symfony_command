{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Client_name</th>
                <td>{{ order.clientName }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ order.state }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Maximum_date</th>
                <td>{{ order.maximumDate ? order.maximumDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Products</th>
                {%  for product in order.products %}
                    <td>
                        <a href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }}</a>
                    </td>
                {% endfor %}
            </tr>

        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
